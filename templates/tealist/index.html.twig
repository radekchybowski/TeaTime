{% extends 'default/_dashboard.html.twig' %}

{% block title %}{{ 'site_title.tealist'|trans }}{% endblock %}
{% block section_title %}
    <h1 class="text-left">{{ 'site_title.tealist'|trans }}</h1>
    <a class="btn btn-success" href="{{ path('tealist_create') }}">{{ 'button.tealist.action_create'|trans }}</a>
{% endblock %}
{% block main %}
    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'tealist.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'tealist.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.comment.author'|trans, 'tealist.author.email') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tealist in pagination.items %}
                <tr>
                    <td>{{ tealist.title|trans }}</td>
                    <td>{{ tealist.createdAt|date('Y-m-d') }}</td>
                    <td>{{ tealist.author.email }}</td>
                    <td>
                        {% if tealist.teas is defined and tealist.teas|length %}
                            {% for tea in tealist.teas %}
                                <a
                                        class="badge badge-pill badge-secondary"
                                        href="{{ url('tea_show', {id: tea.id}) }}"
                                        title="{{ tea.title }}"
                                >
                                    {{ tea.title }}
                                </a>
                            {% endfor %}
                        {% endif %}
                    </td>
                    <td>
                            <a class="btn btn-outline-primary m-1" href="{{ url('tealist_show', {id: tealist.id}) }}" title="{{ 'button.action_show'|trans }}">
                                {{ 'button.action_show'|trans }}
                            </a>
                        {% if is_granted('EDIT', tealist) %}
                            <a class="btn btn-outline-success m-1" href="{{ url('tealist_edit', {id: tealist.id}) }}" title="{{ 'button.action_edit'|trans }}">
                                {{ 'button.action_edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', tealist) %}
                            <a class="btn btn-outline-danger m-1" href="{{ url('tealist_delete', {id: tealist.id}) }}" title="{{ 'button.action_delete'|trans }}">
                                {{ 'button.action_delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>{{ 'message.empty_list'|trans }}</p>
    {%  endif %}

{% endblock %}